<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - AuthSystem</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/head.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/AuthSystem.styles.css" asp-append-version="true" />
    <link href="https://fonts.googleapis.com/css2?family=Roboto:wght@300;400;700&display=swap" rel="stylesheet">
</head>
<body>
    <header>
        <nav class="navbar navbar-expand-sm navbar-toggleable-sm navbar-light bg-white border-bottom box-shadow mb-3">
            <div class="container">
                <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target=".navbar-collapse" aria-controls="navbarSupportedContent"
                        aria-expanded="false" aria-label="Toggle navigation">
                    <span class="navbar-toggler-icon"></span>
                </button>
                <div class="navbar-collapse collapse d-sm-inline-flex flex-sm-row-reverse">
                   <div class="navbar-nav flex-grow-1">
                        <ul class="navbar-nav flex-grow-1">
                            <li class="nav-item vit" style="padding-left: 250px;">
                                <a class="nav-link text-dark button-17 positioned hover-underline-animation cta" asp-area="" asp-controller="Home" asp-action="Index">Havrilyak.LNU.WorkWise.Web</a>
                            </li>
                            <li class="nav-item">
                                <a class="nav-link text-dark button-17 positioned hover-underline-animation cta" asp-area="" asp-controller="Home" asp-action="Employer">Employers</a>
                            </li>
                            <li class="nav-item">
                                <a class="nav-link text-dark button-17 positioned" asp-area="" asp-controller="Home" asp-action="Freelancer">Freelancers</a>
                            </li>
                            <li class="nav-item">
                                <a class="nav-link text-dark button-17 positioned" asp-area="" asp-controller="Home" asp-action="Privacy">Info</a>
                            </li>
                            <!-- <li class="nav-item">
                                <a class="nav-link text-dark button-17 " asp-area="" asp-page="/SingUP">Sign up</a>
                            </li>
                            <li class="nav-item">
                                <a class="nav-link text-dark button-17 " asp-area="" asp-page="/SingIN">Sign in</a>
                            </li>-->
                            <li>
                                <partial name="_LoginPartial.cshtml" />
                            </li>
                        </ul>
                   </div>            
                </div>
            </div>
        </nav>
    </header>
    <div class="container">
        <main role="main" class="pb-3">
            @RenderBody()
        </main>
    </div>

    <footer class="border-top footer text-muted">
        <div class="container">
            &copy; 2023 - AuthSystem - <a asp-area="" asp-controller="Home" asp-action="Privacy">Privacy</a>
        </div>
    </footer>
    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>
