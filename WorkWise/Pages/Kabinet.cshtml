@page
@model WorkWise.Pages.KabinetModel
@{
    Layout = null;

}

<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width,initial-scale=1,maximum-scale=1">
    <title>Document</title>
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/gh/lykmapipo/themify-icons@0.1.2/css/themify-icons.css">
    <link rel="stylesheet" href="/css/Kabinet.css">
</head>
<body>
        <nav class="sidebar">
            <a href="/Index" class="logo">WorkWise</a>
            <div class="menu-content">
                <ul class="menu-items">
                    <div class="menu-title">Menu</div>
                    <li class="item">
                        <a href="#" id="home">Home</a>
                    </li>
                    <li class="item">
                        <a href="#" id="profile">My Profile</a>
                    </li>
                    <li class="item">
                        <a href="#">Feedback</a>
                    </li>
                    <li class="item">
                        <a href="#">Exit</a>
                    </li>
                </ul>
            </div>
        </nav>
        <nav class="navbar">
            <i class="fa-solid fa-bars" id="sidebar-close"></i>
        </nav>
        <main class="main">
            <section id="home-section">
                <h1>Hi , </h1>
            </section>

            
        </main>


    <script type="text/javascript">


        const sidebar = document.querySelector(".sidebar");
        const sidebarClose = document.querySelector("#sidebar-close");
        const menu = document.querySelector(".menu-content");
        const menuItems = document.querySelectorAll(".submenu-item");
        const subMenuTitles = document.querySelectorAll(".submenu .menu-title");

        sidebarClose.addEventListener("click", () => sidebar.classList.toggle("close"));

        menuItems.forEach((item, index) => {
            item.addEventListener("click", () => {
                menu.classList.add("submenu-active");
                item.classList.add("show-submenu");
                menuItems.forEach((item2, index2) => {
                    if (index !== index2) {
                        item2.classList.remove("show-submenu");
                    }
                });
            });
        });

        subMenuTitles.forEach((title) => {
            title.addEventListener("click", () => {
                menu.classList.remove("submenu-active");
            });
        });

    </script>

    <script type="text/javascript">

        
        // Отримуємо посилання на всі кнопки сторінок бічного навігаційного меню
        var homeButton = document.getElementById("home");
        var profileButton = document.getElementById("profile");
        var statisticButton = document.getElementById("statistic");
        var reviewsButton = document.getElementById("reviews");

        // Отримуємо основний контент сторінки
        var mainContent = document.querySelector(".main");

        // Функція для прокручування до потрібної секції
        function scrollToSection(sectionId) {
            var section = document.getElementById(sectionId);
            section.scrollIntoView({ behavior: 'smooth' });
        }

        // Додаємо обробник події для кожної кнопки
        homeButton.addEventListener("click", function () {
            scrollToSection("home-section");
        });

        profileButton.addEventListener("click", function () {
            scrollToSection("profile-section");
        });

        statisticButton.addEventListener("click", function () {
            scrollToSection("statistic-section");
        });

        reviewsButton.addEventListener("click", function () {
            scrollToSection("reviews-section");
        });
    </script>

</body>
</html>