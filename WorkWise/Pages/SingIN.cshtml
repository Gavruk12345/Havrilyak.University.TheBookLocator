@page
@model WorkWise.Pages.SignInModel

<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - Havrilyak.LNU.WorkWise.Web</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/WorkWise.styles.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/css/SingUp.css" asp-append-version="true" />
</head>
<body>
    <div class="container">
        <input type="checkbox" id="check">
        <div class="login form">
            <h1>Login</h1>
            <form method="post">
                <input  placeholder="Enter your email" />
                <input  placeholder="Enter your password" />
                <a href="/Forgot">Forgot password?</a>
                <button type="submit" class="button">Login</button>
                <input type="button" class="button" value="Continue with google" />
            </form>
            <div class="signup">
                <span class="signup">
                    Don't have an account?
                    <a href="/SingUP">Register</a>
                </span>
            </div>
            <div class="signup">
                <span class="signup">
                    Go to cabinet
                    <a href="/Cabinet">Cabinet</a>
                </span>
            </div>
        </div>
    </div>
</body>
</html>
