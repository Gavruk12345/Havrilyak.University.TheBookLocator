@page
@model WorkWise.Pages.FrelancerProfile.FreelancerProModel
@{
}

<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - Havrilyak.LNU.WorkWise.Web</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/WorkWise.styles.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/css/Profile.css" asp-append-version="true" />

</head>
<body>

    <div class="profile-card">
        <div class="profile-header">
            <img src="profile-picture.jpg" alt="Profile Photo" class="profile-picture">
            <h1 class="profile-name">Freelancer's Name</h1>
            <span class="status">Available</span>
        </div>
        <div class="profile-details">
            <h2 class="section-title">About Me:</h2>
            <p class="profile-description">Here can be the full description of the freelancer, including their skills, experience, achievements, and other details.</p>
            <h2 class="section-title">Skills:</h2>
            <ul class="skills">
                <li>Skill 1</li>
                <li>Skill 2</li>
                <li>Skill 3</li>
            </ul>
            <h2 class="section-title">Work Experience:</h2>
            <ul class="experience">
                <li>Company 1 - Position 1</li>
                <li>Company 2 - Position 2</li>
                <li>Company 3 - Position 3</li>
            </ul>
            <div class="rating">
                <h2 class="section-title">Rating:</h2>
                <span class="stars">&#9733;&#9733;&#9733;&#9733;&#9734;</span>
            </div>
        </div>
    </div>

</body>

</html>